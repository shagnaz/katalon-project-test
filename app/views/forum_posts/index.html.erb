<p id="notice"><%= notice %></p>

<h1>Listing Forum Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Forum thread</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forum_posts.each do |forum_post| %>
      <tr>
        <td><%= forum_post.content %></td>
        <td><%= forum_post.forum_thread_id %></td>
        <td><%= forum_post.user_id %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>


